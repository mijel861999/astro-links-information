---
interface Props {
	title: string;
	icon: string;
	href: string;
}

const { href, title, icon } = Astro.props;
---

<div class="card-link">
	<a href={href}>{ title }</a>
	<!-- <img src={icon} alt="title"> -->
</div>

<style>
	.card-link {
		margin: 20px auto;
		padding: 14px 24px;
		width: 350px;
		background-color: grey;
		text-align: center;
		border-radius: 15px;
		border: 2px solid black;
	}	

	.card-link a{
		text-decoration: none;
		color: white;
		font-size: 20px;
		font-weight: bold;
	}	
</style>
